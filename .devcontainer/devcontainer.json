{
  "name": "Weaver - Elixir 1.18",
  "image": "elixir:1.18",
  "remoteUser": "developer",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "upgradePackages": false,
      "username": "developer"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["JakeBecker.elixir-ls"],
      "settings": {
        "elixirLS.fetchDeps": true
      }
    }
  },
  "containerEnv": {
    "MIX_ENV": "dev",
    "LANG": "C.UTF-8"
  },
  "init": true
}
